---
export const prerender = false;
 
import "../styles/global.css";
import { problems } from "../data/problems";
import { getCurrentUser } from "../lib/session";
 
const user = await getCurrentUser(Astro.request);
const completedTasks = user?.completed_tasks || [];
---
 
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>Play - BETA-CODE</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400..900&display=swap" rel="stylesheet">
</head>

<header class="site-header">
			<div class="header-left">
				<img class="logo" src="../pictures/betaiconJustb.webp" alt="Beta-code logo">
				<h1>eta-code</h1>
			</div>
			<nav class="site-nav">
      <a href="/">Home</a>
      <a href="/play">Tasks</a>
      <a href="/leaderboard">Leaderboard</a>
      {user ? (
        <span class="user-info">
          <span class="username">{user.username}</span>
          <button id="logoutBtn" class="logout-btn">Logout</button>
        </span>
      ) : (
        <a href="/auth">Login</a>
      )}
    </nav>
			
  </header>

  <main style="max-width: 900px; margin: 0 auto; padding: 16px;">
    <h1>All Tasks</h1>
    <p class="p-text">Choose a task to start coding.</p>
    {user && (
      <p class="p-text">Completed: {completedTasks.length} / {problems.length}</p>
    )}
    <ul style="list-style:none; padding:0; display:grid; gap:12px;">
      {problems.map((t) => {
        const isCompleted = completedTasks.includes(t.id);
        return (
          <li class={`task-item ${isCompleted ? 'completed' : ''}`}>
            <div style="display:flex; justify-content:space-between; align-items:center;">
              <div>
                <strong>
                  {isCompleted && <span class="check-mark">âœ“ </span>}
                  {t.title}
                </strong>
                <div class="p-text">Difficulty: {t.difficulty}  |  Points: {t.points}</div>
              </div>
              <a href={`/problems/${t.id}`}>Open</a>
            </div>
          </li>
        );
      })}
    </ul>
  </main>
 
  <script>
    const logoutBtn = document.getElementById('logoutBtn');
    if (logoutBtn) {
      logoutBtn.addEventListener('click', async () => {
        await fetch('/api/logout', { method: 'POST' });
        window.location.reload();
      });
    }
  </script>
 
  <style>
    .user-info {
      display: flex;
      align-items: center;
      gap: 12px;
    }
 
    .username {
      color: var(--beta-blue);
      font-weight: 600;
    }
 
    .logout-btn {
      padding: 6px 12px;
      background: transparent;
      border: 1px solid var(--small-text);
      border-radius: 6px;
      color: var(--small-text);
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
    }
 
    .logout-btn:hover {
      border-color: var(--beta-blue);
      color: var(--beta-blue);
    }
 
    .task-item {
      border: 1px solid #333;
      border-radius: 12px;
      padding: 12px;
    }
 
    .task-item.completed {
      border-color: #2d8a4e;
      background: rgba(45, 138, 78, 0.1);
    }
 
    .check-mark {
      color: #2d8a4e;
    }
  </style>
</body>
</html>